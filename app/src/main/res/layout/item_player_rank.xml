<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/tv_rank"
        style="@style/MainText"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/page_padding"
        android:text="1、" />

    <ImageView
        android:id="@+id/tv_player_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/tv_rank"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/page_padding"
        android:src="@drawable/img_default_head" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/page_padding"
        android:layout_toRightOf="@id/tv_player_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/MainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安东尼" />

        <TextView
            android:id="@+id/tv_team"
            style="@style/SecondText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="76人" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_value"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/page_padding"
        android:text="35"
        android:textSize="@dimen/sp_25" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider" />

</RelativeLayout>