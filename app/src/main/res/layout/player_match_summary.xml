<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wangcj.common.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:backVisibility="visible"
        app:title="數據卡"
        app:titleBackgound="@color/red"
        app:titleColor="@color/white" >

        <com.wangcj.common.widget.PressImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:padding="@dimen/page_padding"
            android:src="@drawable/img_share" />

    </com.wangcj.common.widget.TitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/player_match_summary_ll"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white">

            <com.wangcj.common.widget.CircleSImageView
                android:id="@+id/player_match_summary_icon_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:clickable="false"
                android:src="@drawable/img_default_head"
                app:civ_border_color="@color/red"
                app:civ_border_overlay="true" />

            <TextView
                android:id="@+id/player_match_summary_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/player_match_summary_icon_iv"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                android:text="playername"/>

        </RelativeLayout>

        <!--<com.flyco.tablayout.CommonTabLayout
            android:id="@+id/player_match_summary_quarter_tab"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            tl:tl_iconHeight="22dp"
            tl:tl_iconWidth="22dp"
            tl:tl_indicator_color="@color/white"
            tl:tl_indicator_height="0dp"
            tl:tl_textSelectColor="@color/red"
            tl:tl_textUnselectColor="@color/gray"
            tl:tl_textsize="@dimen/sp_14"
            tl:tl_underline_color="@color/white"
            tl:tl_underline_height="1dp" />-->

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/player_match_summary_quarter_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            app:tl_indicator_color="@color/blue"
            app:tl_indicator_width="40dp"
            app:tl_tab_space_equal="true"
            app:tl_textBold="BOTH"
            app:tl_textSelectColor="@color/blue"
            app:tl_textUnselectColor="@color/gray" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player_match_summary_info_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:scrollbars="vertical"
            android:overScrollMode="never">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>


</LinearLayout>
